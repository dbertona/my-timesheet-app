:root {
  --ts-font-size: 12px;
}

/* Layout principal del timesheet - usa todo el alto disponible */
.ts-responsive {
  overflow-x: auto;
  max-width: 100vw;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
  font-size: var(--ts-font-size) !important;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Contenedor principal del timesheet - flexbox vertical */
.ts-responsive .timesheet-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  min-height: 100vh;
}

/* Header y panel derecho - altura fija */
.ts-responsive .timesheet-header-section {
  flex-shrink: 0;
  margin-bottom: 24px;
}

/* SecciÃ³n de lÃ­neas - ocupa todo el espacio restante */
.ts-responsive .timesheet-lines-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0; /* Importante para que flex: 1 funcione correctamente */
}

/* Contenedor de la tabla - ocupa todo el espacio disponible */
.ts-responsive .timesheet-table-container {
  flex: 1;
  overflow: auto;
  min-height: 0;
  max-width: 100%; /* ğŸ†• Limitar al ancho mÃ¡ximo disponible */
}

/* ğŸ†• Scroll horizontal suave para pantallas pequeÃ±as */
.ts-responsive .timesheet-table-container::-webkit-scrollbar {
  height: 8px;
}

.ts-responsive .timesheet-table-container::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

.ts-responsive .timesheet-table-container::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4px;
}

.ts-responsive .timesheet-table-container::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}

/* Tabla de lÃ­neas - altura completa del contenedor */
.ts-responsive .timesheet-table {
  width: 100%;
  height: 100%;
  min-height: 100%;
  max-width: 100%; /* ğŸ†• Limitar ancho mÃ¡ximo */
